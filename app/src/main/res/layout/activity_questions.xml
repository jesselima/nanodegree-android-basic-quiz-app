<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.udacity.nanodegree.quizapp.QuestionsActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:progress="50"
        android:max="100"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/cardBaseLayout"
                android:visibility="visible">
                <LinearLayout
                    style="@style/cardLinearLayoutVertical">
                    <TextView
                       style="@style/questionHeader"
                       android:text="@string/question_1_header"/>
                    <TextView
                       style="@style/questionBody"
                       android:text="How many jumping events athletics has? Do not consider the gender."/>
                    <RadioGroup
                       style="@style/radioGroupRoot">
                           <RadioButton
                               style="@style/radioButton"
                               android:text="1 event" />
                           <RadioButton
                               style="@style/radioButton"
                               android:text="2 events"/>
                           <RadioButton
                               style="@style/radioButton"
                               android:text="4 events"/>
                           <RadioButton
                               style="@style/radioButton"
                               android:text="6 events"/>
                            <RadioButton
                               style="@style/radioButton"
                               android:text="10 events"/>
                    </RadioGroup>
               </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                style="@style/buttonDefault"
                android:onClick="viewSummary"
                android:text="See Answers Summary"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
